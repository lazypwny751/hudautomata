:80 {
    # API proxy önce gelsin - /api/* requests'leri backend'e yönlendir
    handle /api/* {
        reverse_proxy http://backend:8080 {
            header_up Host {host}
            header_up X-Real-IP {remote}
            header_up X-Forwarded-For {remote}
            header_up X-Forwarded-Proto {scheme}
        }
    }

    # Static files ve SPA
    handle {
        root * /srv
        
        encode gzip zstd

        # Cache static assets
        @staticFiles {
            path *.js *.css *.svg *.ico *.png *.jpg *.jpeg *.woff2 *.woff *.ttf
        }
        header @staticFiles Cache-Control "public, max-age=31536000, immutable"

        # SPA fallback - tüm diğer requestler index.html'e
        try_files {path} /index.html
        file_server
    }

    log {
        output stdout
        format console
    }
}
